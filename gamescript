    IEnumerator PlayText()
    {

        foreach (char c in story)
        {

            if ((!stopText || !skipText) && dialogueText.text != story) dialogueText.text += c;
            else
            {
                break;

            }
            if (stopText)
            {
                break;
            }

            yield return new WaitForSeconds(delay);
            if (c.ToString() == "." || c.ToString() == "!" || c.ToString() == "?" || c.ToString() == "…")
            {
                yield return new WaitForSeconds(delay * 20);

            }
            if (c.ToString() == ",") yield return new WaitForSeconds(delay * 10);
            if (skipText)
            {
                dialogueText.text = story;
                break;
            }
            StartCoroutine(autoModeSet());
        }

        if (dialogueText.text == story)
        {
            nextButton.interactable = true;
            nextButton.Select();
        }
    }

    IEnumerator Fade50Char1(bool fadeAway)
    {
        // fade from opaque to transparent
        if (fadeAway)
        {
            // loop over 1 second backwards
            for (float i = 1; i >= 0.5f; i -= Time.deltaTime)
            {
                // set color with i as alpha
                character1.color = new Color(i, i, i, 1);
                yield return null;


            }
        }
        else
        {
            // loop over 1 second forwards
            for (float i = 0.5f; i < 1; i += Time.deltaTime)
            {
                // set color with i as alpha
                character1.color = new Color(i, i, i, 1);
                yield return null;


            }
        }
    }
    IEnumerator Fade50Char2(bool fadeAway)
    {
        // fade from opaque to transparent
        if (fadeAway)
        {
            // loop over 1 second backwards
            for (float i = 1; i >= 0.5f; i -= Time.deltaTime)
            {
                // set color with i as alpha
                character2.color = new Color(i, i, i, 1);
                yield return null;


            }
        }
        else
        {
            // loop over 1 second forwards
            for (float i = 0.5f; i < 1; i += Time.deltaTime)
            {
                // set color with i as alpha
                character2.color = new Color(i, i, i, 1);
                yield return null;


            }
        }
    }
    IEnumerator FadeChar1(bool fadeAway)
    {
        // fade from opaque to transparent
        if (fadeAway)
        {
            // loop over 1 second backwards
            for (float i = 1; i >= 0; i -= Time.deltaTime)
            {
                // set color with i as alpha
                character1.color = new Color(1, 1, 1, i);
                yield return null;
                if (i <= 4)
                {
                    character1.gameObject.SetActive(false);
                }
            }
        }
        // fade from transparent to opaque
        else
        {
            character1.gameObject.SetActive(true);
            // loop over 1 second
            for (float i = 0; i <= 1; i += Time.deltaTime)
            {
                // set color with i as alpha
                character1.color = new Color(1, 1, 1, i);
                yield return null;
            }
        }
    }

    IEnumerator FadeChar2(bool fadeAway)
    {
        // fade from opaque to transparent
        if (fadeAway)
        {
            // loop over 1 second backwards
            for (float i = 1; i >= 0; i -= Time.deltaTime)
            {
                // set color with i as alpha
                character2.color = new Color(1, 1, 1, i);
                yield return null;
                if (i <= 4)
                {
                    character2.gameObject.SetActive(false);
                }

            }
        }
        // fade from transparent to opaque
        else
        {
            character2.gameObject.SetActive(true);
            // loop over 1 second
            for (float i = 0; i <= 1; i += Time.deltaTime)
            {
                // set color with i as alpha
                character2.color = new Color(1, 1, 1, i);
                yield return null;
            }
        }
    }
    public void biggerFont()
    {
        if (dialogueText.fontSizeMax < 150)
        {
            dialogueText.fontSizeMax += 5;
            dialogueName.fontSizeMax += 5;
        }
    }
    public void smallerFont()
    {
        if (dialogueText.fontSizeMax > 25)
        {
            dialogueText.fontSizeMax -= 5;
            dialogueName.fontSizeMax -= 5;
        }
    }

    public void addToLog()
    {
        if (namePanel.activeSelf)
        {
            if (SettingsScript.language == "Français") doisPontos = " : ";
            else doisPontos = ": ";
        }
        else
        {
            doisPontos = "";
        }
        if (logNumber < text) logText.text += "\n\n" + dialogueName.text + doisPontos + dialogueText.text;
    }

    public void showHideLog()
    {
        if (log.gameObject.activeSelf) log.gameObject.SetActive(false);
        else log.gameObject.SetActive(true);

    }
    public void autoModeOnOff()
    {
        if (autoMode) autoMode = false;
        else autoMode = true;

        StartCoroutine(autoModeSet());

    }
    IEnumerator autoModeSet()
    {
        if (dialogueText.text == story && autoMode && !choiceParent.gameObject.activeSelf)
        {
            yield return new WaitForSeconds(autoDelay * Time.deltaTime);
            ClickNextButton();

        }

    }
    public void validateInput()
    {
#if UNITY_STANDALONE || UNITY_EDITOR
        //DESKTOP COMPUTERS
        if (Input.GetMouseButtonDown(0))
        {

            if (EventSystem.current.IsPointerOverGameObject() && !PanelScript.mouseOver)
                validInput = false;
            else
                validInput = true;
        }
        if (Input.GetMouseButtonDown(1))
        {
            showHideUIMain();
        }
#else
    //MOBILE DEVICES
    if (Input.touchCount > 0 && Input.GetTouch(0).phase == TouchPhase.Began)
    {
        if (EventSystem.current.IsPointerOverGameObject(Input.GetTouch(0).fingerId))
            validInput = false;
        else
            validInput = true;
    }
#endif
    }

    public void showHideUIMain()
    {
        if (UIParentMain.activeSelf)
        {
            UIParentMain.gameObject.SetActive(false);
            UIShowButton.gameObject.SetActive(true);
        }
        else
        {
            UIParentMain.gameObject.SetActive(true);
            UIShowButton.gameObject.SetActive(false);
        }

    }

    public void showUIMain()
    {
        UIParentMain.gameObject.SetActive(true);
        UIShowButton.gameObject.SetActive(false);
    }
    public void skipTextFunction()
    {
        skipText = true;
        //  dialogueText.text = story;
    }


    public void SaveGame()
    {
        if (saveSlot <= 1)
        {
            PlayerPrefs.SetInt("text", text - 1);
            PlayerPrefs.SetString("story", story);
            PlayerPrefs.SetString("language", SettingsScript.language);
            PlayerPrefs.SetFloat("autoDelay", autoDelay);
            PlayerPrefs.SetInt("dialogueSpeed", SettingsScript.dialogueSpeed);
            PlayerPrefs.SetString("dateTime", System.DateTime.Now.Year.ToString() + "/" + System.DateTime.Now.Month.ToString() + "/" + System.DateTime.Now.Day.ToString());
            PlayerPrefs.SetInt("chapter", chapter);
            PlayerPrefs.SetFloat("playtime", playedTime);
            PlayerPrefs.SetInt("playtimeMinutes", playedTimeMinutes);
            PlayerPrefs.SetInt("playtimeHours", playedTimeHours);
        }
        else if (saveSlot == 2)
        {
            PlayerPrefs.SetInt("text2", text - 1);
            PlayerPrefs.SetString("story2", story);
