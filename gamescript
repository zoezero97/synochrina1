    public void loadOrSave()
    {
        if (loadGameBool) LoadGame();
        else SaveGame();
    }

    IEnumerator bgFade(Sprite sprite)
    {
        background2.sprite = sprite;
        for (float i = 1; i >= 0; i -= Time.deltaTime)
        {
            // set color with i as alpha
            background.color = new Color(1, 1, 1, i);
            yield return null;
        }
        background.sprite = background2.sprite;
        background.gameObject.SetActive(true);
        background.color = new Color(255, 255, 255, 255);
    }

    public void Choice1()
    {
        choiceInt = 1;
        ClickNextButton();
    }
    public void Choice2()
    {
        choiceInt = 2;
        ClickNextButton();
    }
    public void Choice3()
    {
        choiceInt = 3;
        ClickNextButton();
    }

    public void clickedChoiceButton()
    {
        clickedChoice = true;
    }
    public void realNextButton()
    {
        clickedChoice = false;
    }

    public void PlayAudio(AudioClip clip)
    {
        mainAudioSource.clip = clip;
        mainAudioSource.Play();
    }
}
