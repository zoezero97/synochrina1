    public static bool stopText;
    public static KeyCode ffKey = KeyCode.Space;
    public static float delayReserved = 0.05f;
    public static int logNumber = 0;
    public ScrollRect log;
    public GameObject scrollRectContent;
    public static string brownHairedGirl = "<color=#ff00ffff>Brown-haired Girl</color>";
    public static string kindBrownHairedGirl = "<color=#ff00ffff>Kind Brown-haired Girl</color>";
    public static string doisPontos;
    public static string gyaruClassmateString = "<color=#f9dbbd>Gyaru Classmate</color>";
    public static string secondYearGirlString = "<color=#e9afa3>Second-year Girl</color>";
    public static bool autoMode;
    public static float autoDelay = 125;
    public static bool skipText;
    public static bool validInput = true;
    public GameObject dialoguePanel;
    public static int saveSlot = 1;
    public static bool savedGame;
    public static bool loadGameBool = true;
    public static int chapter = 0;
    public static string chapterString = "Prologue";
    public static float playedTime;
    public static int playedTimeMinutes;
    public static int playedTimeHours;
    public static bool isInMenu;
    public static bool openLateralMenu;
    public Image background;
    public Image background2;
    public Sprite convenienceStore;
    public Sprite convenienceStoreNight;
    public Sprite schoolBack;
    public Sprite classroomDay;
    public Sprite schoolCorridor;
