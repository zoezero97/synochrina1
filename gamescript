            PlayerPrefs.SetString("story12", story);
            PlayerPrefs.SetInt("chapter12", chapter);
            PlayerPrefs.SetString("language12", SettingsScript.language);
            PlayerPrefs.SetFloat("autoDelay12", autoDelay);
            PlayerPrefs.SetInt("dialogueSpeed12", SettingsScript.dialogueSpeed);
            PlayerPrefs.SetString("dateTime12", System.DateTime.Now.Year.ToString() + "/" + System.DateTime.Now.Month.ToString() + "/" + System.DateTime.Now.Day.ToString());
            PlayerPrefs.SetFloat("playtime12", playedTime);
            PlayerPrefs.SetInt("playtimeMinutes12", playedTimeMinutes);
            PlayerPrefs.SetInt("playtimeHours12", playedTimeHours);
        }
        savedGame = true;
    }
    public void LoadGame()
    {
        loadGame = true;
        logText.text = "";
        character1.color = new Color(255, 255, 255, 255);
        moveCharacter1LeftDisappear = false;
        moveCharacter1RightDisappear = false;
        if (saveSlot <= 1)
        {
            text = PlayerPrefs.GetInt("text");
            story = PlayerPrefs.GetString("story");
            SettingsScript.language = PlayerPrefs.GetString("language");
            autoDelay = PlayerPrefs.GetFloat("autoDelay");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed");
            chapter = PlayerPrefs.GetInt("chapter");


        }
        else if (saveSlot == 2)
        {
            text = PlayerPrefs.GetInt("text2");
            story = PlayerPrefs.GetString("story2");
            SettingsScript.language = PlayerPrefs.GetString("language2");
            autoDelay = PlayerPrefs.GetFloat("autoDelay2");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed2");
            chapter = PlayerPrefs.GetInt("chapter2");
        }
        else if (saveSlot == 3)
        {
            text = PlayerPrefs.GetInt("text3");
            story = PlayerPrefs.GetString("story3");
            SettingsScript.language = PlayerPrefs.GetString("language3");
            autoDelay = PlayerPrefs.GetFloat("autoDelay3");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed3");
            chapter = PlayerPrefs.GetInt("chapter3");
        }
        else if (saveSlot == 4)
        {
            text = PlayerPrefs.GetInt("text4");
            story = PlayerPrefs.GetString("story4");
            SettingsScript.language = PlayerPrefs.GetString("language4");
            autoDelay = PlayerPrefs.GetFloat("autoDelay4");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed4");
            chapter = PlayerPrefs.GetInt("chapter4");
        }
        else if (saveSlot == 5)
        {
            text = PlayerPrefs.GetInt("text5");
            story = PlayerPrefs.GetString("story5");
            SettingsScript.language = PlayerPrefs.GetString("language5");
            autoDelay = PlayerPrefs.GetFloat("autoDelay5");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed5");
            chapter = PlayerPrefs.GetInt("chapter5");
        }
        else if (saveSlot == 6)
        {
            text = PlayerPrefs.GetInt("text6");
            story = PlayerPrefs.GetString("story6");
            SettingsScript.language = PlayerPrefs.GetString("language6");
            autoDelay = PlayerPrefs.GetFloat("autoDelay6");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed6");
            chapter = PlayerPrefs.GetInt("chapter6");
        }
        else if (saveSlot == 7)
        {
            text = PlayerPrefs.GetInt("text7");
            story = PlayerPrefs.GetString("story7");
            SettingsScript.language = PlayerPrefs.GetString("language7");
            autoDelay = PlayerPrefs.GetFloat("autoDelay7");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed7");
            chapter = PlayerPrefs.GetInt("chapter7");
        }
        else if (saveSlot == 8)
        {
            text = PlayerPrefs.GetInt("text8");
            story = PlayerPrefs.GetString("story8");
            SettingsScript.language = PlayerPrefs.GetString("language8");
            autoDelay = PlayerPrefs.GetFloat("autoDelay8");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed8");
            chapter = PlayerPrefs.GetInt("chapter8");
        }
        else if (saveSlot == 9)
        {
            text = PlayerPrefs.GetInt("text9");
            story = PlayerPrefs.GetString("story9");
            SettingsScript.language = PlayerPrefs.GetString("language9");
            autoDelay = PlayerPrefs.GetFloat("autoDelay9");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed9");
            chapter = PlayerPrefs.GetInt("chapter9");
        }
        else if (saveSlot == 10)
        {
            text = PlayerPrefs.GetInt("text10");
            story = PlayerPrefs.GetString("story10");
            SettingsScript.language = PlayerPrefs.GetString("language10");
            autoDelay = PlayerPrefs.GetFloat("autoDelay10");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed10");
            chapter = PlayerPrefs.GetInt("chapter10");
        }
        else if (saveSlot == 11)
        {
            text = PlayerPrefs.GetInt("text11");
            story = PlayerPrefs.GetString("story11");
            SettingsScript.language = PlayerPrefs.GetString("language11");
            autoDelay = PlayerPrefs.GetFloat("autoDelay11");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed11");
            chapter = PlayerPrefs.GetInt("chapter11");
        }
        else if (saveSlot == 12)
        {
            text = PlayerPrefs.GetInt("text12");
            story = PlayerPrefs.GetString("story12");
            SettingsScript.language = PlayerPrefs.GetString("language12");
            autoDelay = PlayerPrefs.GetFloat("autoDelay12");
            SettingsScript.dialogueSpeed = PlayerPrefs.GetInt("dialogueSpeed12");
            chapter = PlayerPrefs.GetInt("chapter12");
        }
        updateText();
    }

