    [SerializeField] public static string story;
    [SerializeField] public static float delay = 0.05f;
    [SerializeField] public static int text;
    public static string pressToStartString;
    public Button nextButton;
    public Button previousButton;
    public Button UIShowButton;
    public Button choice1Button;
    public Button choice2Button;
    public Button choice3Button;
