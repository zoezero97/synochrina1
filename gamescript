{
    public TMP_Text dialogueText;
    public TMP_Text dialogueName;
    public TMP_Text logText;
    public TMP_Text choice1Text;
    public TMP_Text choice2Text;
    public TMP_Text choice3Text;

    public GameObject namePanel;
    public Image character1;
    public Image character2;
    public Sprite douglasLee;
    public Sprite katherineStandingHappy;
    public Sprite katherineStandingSmile;
