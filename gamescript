    public Sprite outsideCafé;
    public Sprite street1Day;
    public static Color pink;
    public static Color nameColor;
    public static string katherineString = "<color=#ff00ffff>Katherine</color>";
    public static string douglasString = "<color=white>Douglas</color>";
    public static string markString = "<color=yellow>Mark</color>";
    public static string derekString = "<color=red>Derek</color>";
    public static string hatimString = "<color=#7B2000>Hatim</color>";
    public static string betrysString = "<color=blue>Betrys</color>";
    public static string marksFriend1String = "<color=#FF7F50>Mark's Friend 1</color>";
    public static string marksFriend2String = "<color=#008080>Mark's Friend 2</color>";
    public GameObject UIParentMain;
    public static bool loadGame;
    public static bool cleanLog;
    private Button lastButtonSelected;
    public static bool moveCharacter1RightDisappear;
    public static bool moveCharacter1LeftDisappear;
    public static Vector3 character1InitialPosition;
    public static float autoSaveWaitTime;
    public AudioClip schoolBell;
    public AudioSource mainAudioSource;
    public static bool autoSaveOn = true;
    public static bool saveTheGame = false;
    public static int choiceInt = 1;
    public static int acceptSpoonful = 1;
    public static int talkAboutAntonius = 1;
    public static int cheerKatherineUp = 1;
    public static int questionAboutKiller = 1;
    public static int kissOrHug = 1;
    public static bool showChoice;
    public static bool showNextButton;
    public static bool clickedChoice;
    public static bool skippedQuestionsKiller;


    // Start is called before the first frame update
    void Start()
    {
        isInMenu = true;
        // dialogueText.text = "This is a test.";
        story = "";
        dialogueName.text = "";
        character1.sprite = douglasLee;
        character2.sprite = katherineStandingHappy;
        StartCoroutine(PlayText());
        StartCoroutine(FadeChar1(true));
        StartCoroutine(FadeChar2(true));
        namePanel.gameObject.SetActive(false);
        // character1InitialPosition = new Vector3(1053.00f, 541.26f, 0.00f);
        Debug.Log(character1.transform.position);
        autoSaveWaitTime = 1f;
        autoSaveOn = true;
        //autosave
        // StartCoroutine(autoSave(autoSaveWaitTime));

    }
    private void Update()
    {

        if (showChoice && dialogueText.text == story)
        {
            choiceParent.gameObject.SetActive(true);
            if(!showNextButton) nextButton.gameObject.SetActive(false);
            //choice1Button.Select();
        }
        else
        {
            choiceParent.gameObject.SetActive(false);
            nextButton.gameObject.SetActive(true);
        }

        if (saveTheGame)
        {
            SaveGame();
            saveTheGame = false;
        }

        if (moveCharacter1RightDisappear) // move character 1 to the right and make it disappear
        {
            if (character1.transform.position.x < Screen.currentResolution.width * 3)
            {
                character1.transform.position += new Vector3(35, 0, 0);
            }
            else
            {
                character1.color = new Color(1, 1, 1, 0);
                character1.transform.position = character1InitialPosition;
                moveCharacter1RightDisappear = false;
            }
        }

        if (moveCharacter1LeftDisappear) // move character 1 to the left and make it disappear
        {
            if (character1.transform.position.x > -Screen.currentResolution.width)
            {
                character1.transform.position += new Vector3(-35, 0, 0);
            }
            else
            {
                character1.color = new Color(1, 1, 1, 0);
                character1.transform.position = character1InitialPosition;
                moveCharacter1LeftDisappear = false;
            }
        }

        if (EventSystem.current.currentSelectedGameObject != null && EventSystem.current.currentSelectedGameObject.GetComponent<Button>().isActiveAndEnabled)
        {
            lastButtonSelected = EventSystem.current.currentSelectedGameObject.GetComponent<Button>();
        }
        else
        {
            FindAnyObjectByType<Button>().GetComponent<Button>().Select();
            // if(lastButtonSelected.isActiveAndEnabled && lastButtonSelected != null) lastButtonSelected.Select();

        }

        if (cleanLog)
        {
            logText.text = "";
            cleanLog = false;
        }

        katherineString = "<color=#ff00ffff>Katherine</color>";
        douglasString = "<color=white>Douglas</color>";
        pink = new Color(255, 0, 212);
        SettingsScript.BackgroundSprite = background.sprite;
        if (!isInMenu) playedTime += Time.deltaTime;
        if (playedTime >= 60)
        {
            playedTimeMinutes++;
            playedTime = 0;
        }
        if (playedTimeMinutes >= 60)
        {
            playedTimeHours++;
            playedTimeMinutes = 0;
        }

        if (dialogueName.text == katherineString || dialogueName.text == brownHairedGirl || dialogueName.text == kindBrownHairedGirl)
        {
            dialogueName.color = pink;
            nameColor = pink;
        }
        else
        {
            dialogueName.color = Color.white;
            nameColor = Color.white;
        }

        validateInput();

#if UNITY_STANDALONE || UNITY_EDITOR

        //DESKTOP COMPUTERS
        if (Input.GetMouseButtonDown(0) || Input.GetKeyDown(KeyCode.LeftControl) || Input.GetKeyDown(KeyCode.RightControl))// && validInput)
        {
            //Put your code here
            if (EventSystem.current.currentSelectedGameObject != nextButton.GetComponent<Button>() && EventSystem.current.currentSelectedGameObject != nextButton) skipTextFunction();
            Debug.Log("Valid Input");
            //skipText = false;
        }
#else

    //MOBILE DEVICES
    if (Input.touchCount > 0 && Input.GetTouch(0).phase == TouchPhase.Ended && validInput)
    {
        //Put your code here
        Debug.Log("Valid Input");
    }
#endif





        if (!namePanel.activeSelf) dialogueName.text = "";

        if (SettingsScript.language == "Português")
        {
            brownHairedGirl = "<color=#ff00ffff>Garota de Cabelos Castanhos</color>";
            kindBrownHairedGirl = "<color=#ff00ffff>Garota Gentil de Cabelos Castanhos</color>";
            secondYearGirlString = "<color=#e9afa3>Garota do Segundo Ano</color>";
            gyaruClassmateString = "<color=#f9dbbd>Garota Colega de Classe</color>";
            marksFriend1String = "<color=#FF7F50>Amigo do Mark 1</color>";
            marksFriend2String = "<color=#008080>Amigo do Mark 2</color>";
            if (chapter <= 0)
            {
                chapterString = "Prólogo";
            }
        }
        else if (SettingsScript.language == "Español")
        {
            brownHairedGirl = "<color=#ff00ffff>Chica de Pelo Castaño</color>";
            kindBrownHairedGirl = "<color=#ff00ffff>Amable Chica de Pelo Castaño</color>";
            secondYearGirlString = "<color=#e9afa3>Chica de Segundo Año</color>";
            gyaruClassmateString = "<color=#f9dbbd>Chica Compañera de Clase</color>";
            marksFriend1String = "<color=#FF7F50>Amigo de Mark 1</color>";
            marksFriend2String = "<color=#008080>Amigo de Mark 2</color>";
            if (chapter <= 0)
            {
                chapterString = "Prólogo";
            }
        }
        else if (SettingsScript.language == "Italiano")
        {
            brownHairedGirl = "<color=#ff00ffff>Ragazza Sconosciuta</color>";
            kindBrownHairedGirl = "<color=#ff00ffff>Ragazza Gentile</color>";
            secondYearGirlString = "<color=#e9afa3>Ragazza del Secondo Anno</color>";
            gyaruClassmateString = "<color=#f9dbbd>Ragazza Compagna di Classe</color>";
            marksFriend1String = "<color=#FF7F50>L'amico di Mark 1</color>";
            marksFriend2String = "<color=#008080>L'amico di Mark 2</color>";
            if (chapter <= 0)
            {
                chapterString = "Prologo";
            }
        }
        else
        {
            brownHairedGirl = "<color=#ff00ffff>Brown-haired Girl</color>";
            kindBrownHairedGirl = "<color=#ff00ffff>Kind Brown-haired Girl</color>";
            secondYearGirlString = "<color=#e9afa3>Second-year Girl</color>";
            gyaruClassmateString = "<color=#f9dbbd>Gyaru Classmate</color>";
            marksFriend1String = "<color=#FF7F50>Mark's Friend 1</color>";
            marksFriend2String = "<color=#008080>Mark's Friend 2</color>";
 
            if (chapter <= 0)
            {
                chapterString = "Prologue";
            }
        }
        if (Input.GetKeyDown(ffKey))
        {
            delayReserved = delay;
        }
        if (Input.GetKey(ffKey))
        {
            delay = 0;
        }
        if (Input.GetKeyUp(ffKey))
        {
            delay = delayReserved;
        }
        if (stopText)
        {
            story = "";
            character1.gameObject.SetActive(false);
            character2.gameObject.SetActive(false);
            namePanel.gameObject.SetActive(false);
            StopAllCoroutines();
            stopText = false;
        }

        if (MainMenuScript.newGameBool)
        {
            character1.gameObject.SetActive(false);
            character2.gameObject.SetActive(false);
            namePanel.gameObject.SetActive(false);
            dialogueText.text = pressToStartString;
            StopAllCoroutines();
            story = pressToStartString;
            MainMenuScript.newGameBool = false;
        }
        if (dialogueText.text != story)
        {
            nextButton.interactable = false;
            previousButton.interactable = false;
        }
        else
        {
            nextButton.interactable = true;
            previousButton.interactable = true;
        }
        if (text == 0)
        {
            previousButton.gameObject.SetActive(false);
        }
        else
        {
            previousButton.gameObject.SetActive(true);
        }
        if (SettingsScript.language == "Português") pressToStartString = "Pressione > para começar!";
        else if (SettingsScript.language == "Español") pressToStartString = "Pulsa > para empezar!";
        else if (SettingsScript.language == "Italiano") pressToStartString = "Premere > per iniziare!";
        else pressToStartString = "Press > to start!";
        //  if (text == 1) character1.gameObject.SetActive(true);
    }

    public void ClickNextButton()
    {
        stopText = true;
        stopText = false;
        dialogueText.text = "";
        text++;
        skipText = false;
        updateText();
    }
    public void ClickPreviousButton()
    {
        stopText = true;
        stopText = false;
        dialogueText.text = "";
        text--;
        skipText = true;
        loadGame = true;
        updateText();
    }
    public void updateText()
    {
        Debug.Log(character1.transform.position);
        character1.gameObject.SetActive(true);
        dialoguePanel.gameObject.SetActive(true);
        if (!moveCharacter1RightDisappear && !moveCharacter1LeftDisappear) character1InitialPosition = character1.transform.position;
        //HideChoice();
        showChoice = false;
        showNextButton = false;
        if (text <= 95) // Prologue Scene 1
        {
            if (text == 0)
            {
                // character1.sprite = null;
                namePanel.gameObject.SetActive(false);
                character1.gameObject.SetActive(false);
                background.sprite = convenienceStore;
                character1.color = new Color(255, 255, 255, 0);
                character2.color = new Color(255, 255, 255, 0);
                if (SettingsScript.language == "Português") story = "";
                else if (SettingsScript.language == "Español") story = "";
                else if (SettingsScript.language == "Italiano") story = "";
                else story = "";
                if (loadGame) StartCoroutine(FadeChar1(true));
                //  StartCoroutine(FadeChar2(true));
            }
            if (text == 1)
            {
                //  character1.sprite = null;
                character1.gameObject.SetActive(false);
                //   character1.sprite = mc;
                dialogueName.text = "";
                // namePanel.gameObject.SetActive(true);
                namePanel.gameObject.SetActive(false);
                background.sprite = convenienceStore;
                character1.color = new Color(255, 255, 255, 0);
                character2.color = new Color(255, 255, 255, 0);
                if (SettingsScript.language == "Português") story = "Eu me sentia constantemente como um estranho, à deriva em um mar de rostos que nunca me viam. Apesar de minha natureza reservada, parecia que eu atraía pessoas que gostavam de tornar minha vida um inferno.";
                else if (SettingsScript.language == "Español") story = "Me sentía constantemente como un extraño, a la deriva en un mar de caras que nunca me veían. A pesar de mi carácter reservado, parecía que atraía a personas que disfrutaban haciéndome la vida imposible.";
                else if (SettingsScript.language == "Italiano") story = "Mi sentivo costantemente un estraneo, alla deriva in un mare di facce che non mi vedevano mai. Nonostante la mia natura riservata, sembrava che attirassi individui che si divertivano a rendere la mia vita infelice.";
                else story = "I constantly felt like an outsider, adrift in a sea of faces that never quite saw me. Despite my reserved nature, it seemed like I attracted individuals who relished making my life miserable.";
                if (loadGame) StartCoroutine(FadeChar1(true));
                //   character1.gameObject.SetActive(false);
            }

            if (text == 2)
            {
                //character1.sprite = null;
                dialogueName.text = "";
                namePanel.gameObject.SetActive(false);
                //  if (loadGame) StartCoroutine(FadeChar1(true));
                character1.color = new Color(255, 255, 255, 0);
                character2.color = new Color(255, 255, 255, 0);
                background.sprite = convenienceStore;
                if (SettingsScript.language == "Português") story = "Depois de outro encontro angustiante com um valentão, eu me vi sentado do lado de fora de uma loja de conveniência, segurando um pão solitário, perdido em meus pensamentos. Eu sonhava em me defender, revidar e sair vitorioso. Mas, no fundo, eu sabia que não teria a menor chance contra eles.";
                else if (SettingsScript.language == "Español") story = "Después de otro angustioso encuentro con un matón, me encontraba sentado en la puerta de una tienda, agarrando una única barra de pan, sumido en mis pensamientos. Soñaba despierto con defenderme, luchar y salir victorioso. Pero, en el fondo, sabía que no tendría ninguna oportunidad contra ellos.";
                else if (SettingsScript.language == "Italiano") story = "Dopo un altro straziante incontro con un bullo, mi ritrovai seduto fuori da un minimarket, con in mano una pagnotta di pane, perso nei miei pensieri. Sognavo di farmi valere, di reagire e di uscirne vittorioso. Ma in fondo sapevo che non avrei avuto alcuna possibilità contro di loro.";
                else story = "After another harrowing encounter with a bully, I found myself sitting outside a convenience store, clutching a solitary loaf of bread, lost in my thoughts. I daydreamed about standing up for myself, fighting back, and emerging victorious. But deep down, I knew I wouldn't stand a chance against them.";
                //character1.gameObject.SetActive(true);
            }
            if (text == 3)
            {
                //  character1.sprite = null;
                dialogueName.text = "";
                namePanel.gameObject.SetActive(false);
                //  if (loadGame) StartCoroutine(FadeChar1(true));
                character1.color = new Color(255, 255, 255, 0);
                character2.color = new Color(255, 255, 255, 0);
                background.sprite = convenienceStore;
                if (SettingsScript.language == "Português") story = "Enquanto eu socava o chão, frustrado, um frio repentino acariciou minha bochecha, tirando-me de meu devaneio melancólico.";
                else if (SettingsScript.language == "Español") story = "Mientras golpeaba el suelo con frustración, un repentino escalofrío me acarició la mejilla, sacándome de mi melancólica ensoñación.";
                else if (SettingsScript.language == "Italiano") story = "Mentre mi sfogavo in preda alla frustrazione, un brivido improvviso mi accarezzò la guancia, svegliandomi dalle mie malinconiche fantasie.\r\n";
                else story = "As I punched the ground in frustration, a sudden chill caressed my cheek, jolting me out of my melancholy reverie.";
            }
            if (text == 4)
            {

                // StartCoroutine(Fade50Char1(true));
                namePanel.gameObject.SetActive(true);
                dialogueName.text = douglasString;
                //  if (loadGame) StartCoroutine(FadeChar1(true));
                character1.color = new Color(255, 255, 255, 0);
                character2.color = new Color(255, 255, 255, 0);
                background.sprite = convenienceStore;
                if (SettingsScript.language == "Português") story = "O que você—";
                else if (SettingsScript.language == "Español") story = "¿Qué—";
                else if (SettingsScript.language == "Italiano") story = "Che cosa-";
                else story = "What are you—";
                character1.gameObject.SetActive(false);
            }
            if (text == 5)
            {
                // StartCoroutine(Fade50Char1(true));
                // StartCoroutine(Fade50Char2(true));
                // dialogueName.text = "MC";
                dialogueName.text = "";
                namePanel.gameObject.SetActive(false);
                //if (loadGame) StartCoroutine(FadeChar1(true));
                // character1.sprite = katherineStandingHappy;
                character1.color = new Color(255, 255, 255, 0);
                character2.color = new Color(255, 255, 255, 0);
                background.sprite = convenienceStore;
                if (SettingsScript.language == "Português") story = "Eu me virei e vi uma linda garota na minha frente. Seu sorriso radiante parecia irradiar calor, embora a bebida gelada que ela segurava oferecesse um contraste refrescante.";
                else if (SettingsScript.language == "Español") story = "Me di la vuelta y vi a una hermosa chica de pie frente a mí. Su brillante sonrisa parecía irradiar calidez, aunque la bebida fría que sostenía ofrecía un refrescante contraste.";
                else if (SettingsScript.language == "Italiano") story = "Mi girai e vidi una bella ragazza in piedi davanti a me. Il suo sorriso luminoso sembrava irradiare calore, al contrario della bevanda fresca che aveva in mano.";
                else story = "I turned my head to see a beautiful girl standing before me. Her bright smile seemed to radiate warmth, even as the cold drink in her hand offered a refreshing contrast.";
            }
            if (text == 6)
            {

                //  StartCoroutine(Fade50Char2(false));
                StartCoroutine(FadeChar1(false));
                // dialogueName.text = "Brown-haired Girl";
                namePanel.gameObject.SetActive(true);
                background.sprite = convenienceStore;
                character1.sprite = katherineStandingHappy;
                dialogueName.text = brownHairedGirl;
                if (SettingsScript.language == "Português") story = "Desculpe por isso.";
                else if (SettingsScript.language == "Español") story = "Lo siento por eso.";
                else if (SettingsScript.language == "Italiano") story = "Scusami.";
                else story = "Sorry about that.";
            }
            if (text == 7)
            {
                StartCoroutine(Fade50Char1(true));
                //StartCoroutine(Fade50Char2(true));
                // dialogueName.text = "MC";
                background.sprite = convenienceStore;
                character1.sprite = katherineStandingHappy;
                namePanel.gameObject.SetActive(false);
                if (SettingsScript.language == "Português") story = "Uma voz suave e reconfortante escapou de seus lábios.";
                else if (SettingsScript.language == "Español") story = "Una voz suave y reconfortante escapó de sus labios.";
                else if (SettingsScript.language == "Italiano") story = "Dalle sue labbra uscì una voce dolce e confortante.";
                else story = "A soft and comforting voice escaped her lips.";
            }
            if (text == 8)
            {
                StartCoroutine(Fade50Char1(false));
                namePanel.gameObject.SetActive(true);
                background.sprite = convenienceStore;
                character1.sprite = katherineStandingHappy;
                dialogueName.text = brownHairedGirl;
                if (SettingsScript.language == "Português") story = "Estou custando a desviar meu olhar da tristeza em seus olhos. Há algo em sua mente, senhor?";
                else if (SettingsScript.language == "Español") story = "Me cuesta apartar la mirada de la tristeza de sus ojos. ¿Tiene algo en mente, señor?";
                else if (SettingsScript.language == "Italiano") story = "Non riesco a fare a meno di notare la tristezza nei tuoi occhi. C’è qualcosa che ti preoccupa?";
                else story = "I'm finding it hard to shift my gaze from the sadness in your eyes. Is there something on your mind, sir?";
            }
            if (text == 9)
            {
                StartCoroutine(Fade50Char1(true));
                namePanel.gameObject.SetActive(false);
                character1.sprite = katherineStandingHappy;
                background.sprite = convenienceStore;
                if (SettingsScript.language == "Português") story = "Sua gentileza me pegou desprevenido, e eu pisquei de surpresa, não acostumado a receber um carinho tão genuíno de alguém.";
                else if (SettingsScript.language == "Español") story = "Su amabilidad me cogió desprevenido y parpadeé sorprendido, no acostumbrado a recibir una atención tan genuina de alguien.";
                else if (SettingsScript.language == "Italiano") story = "La sua gentilezza mi colse alla sprovvista e sbattei le palpebre per la sorpresa, non essendo abituato a ricevere un'attenzione così genuina da parte di qualcuno.";
                else story = "Her kindness caught me off guard, and I blinked in surprise, not accustomed to receiving such genuine care from someone.";
            }
            if (text == 10)
            {
                if (loadGame) StartCoroutine(Fade50Char1(true));
                namePanel.gameObject.SetActive(true);
                background.sprite = convenienceStore;
                character1.sprite = katherineStandingHappy;
                dialogueName.text = douglasString;
                if (SettingsScript.language == "Português") story = "Eu… err, foi um dia difícil.";
                else if (SettingsScript.language == "Español") story = "Yo… eh, ha sido un día duro.";
                else if (SettingsScript.language == "Italiano") story = "Io… uh, è solo stata una giornata difficile.";
                else story = "I… uh, it's just been a tough day.";
            }
            if (text == 11)
            {
